@model Shop.Models.Product

@{
    ViewData["Title"] = "Подробности";
}

<h2>Подробности</h2>

<div>
    <h4>Продукция</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Наименование
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Цена
        </dt>
